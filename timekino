p = peripheral.wrap("top")

term.redirect(p)
        while true do
            time = os.time()
            if time == 10 then
                shell.run("kinofilm")
            else
                sleep(0)
                    p.setTextScale(5)
                    term.setCursorPos(6,4)
                        write(textutils.formatTime(os.time(),true))
                        
            end
        end
term.restore()