p = peripheral.wrap("top")

term.redirect(p)
        while true do
            sleep(1)
            time = os.time()
            if rs.getInput("back") == true then
                p.clear()
                p.setTextScale(1)
                p.setCursorPos(1,1)
                shell.run("kinofilm")
            elseif time == 10 then
                p.clear()
                shell.run("kinofilm")
            elseif rs.getInput("back") == false then
                p.clear()
                p.setTextScale(5)
                p.setCursorPos(6,4)
                write(textutils.formatTime(os.time(),true))     
            end
        end
term.restore()